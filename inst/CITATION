  url          = "http://www.jstatsoft.org/v47/i10/",

  textVersion  =
  paste("Giuliano Galimberti, Gabriele Soffritti, Matteo Di Maso (2012).",
        "Classification Trees for Ordinal Responses in R: The rpartScore Package.",
